<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="true" throwExceptions="false" internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <targets>
    <target xsi:type="File"     name="File"     layout="[${longdate} ${uppercase:${level}}] -> ${message}"  fileName="${basedir}/Logs/${uppercase:${level}} - ${shortdate}.log" />
    <target xsi:type="Debugger" name="Debug"    layout="[*] ${message}"/>
    <target xsi:type="Console"  name="Console"  layout="${message}"/>
  </targets>
  
  <rules>
    <logger name="*" minlevel="Debug" writeTo="File"/>
  </rules>
</nlog>
